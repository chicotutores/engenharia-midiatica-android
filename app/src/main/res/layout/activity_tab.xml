<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/fragmentContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/newsTabItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/newsIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/grayShade1"/>

            <com.blueappsdev.engenhariamidiatia.utils.layout.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dinFamily="medium"
                android:textSize="13sp"
                android:text="@string/news"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/twitterTabItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/twitterIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/grayShade1"/>

            <com.blueappsdev.engenhariamidiatia.utils.layout.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dinFamily="medium"
                android:textSize="13sp"
                android:text="@string/twitter_tab_description"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultTabItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/resultIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/grayShade1"/>

            <com.blueappsdev.engenhariamidiatia.utils.layout.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dinFamily="medium"
                android:textSize="13sp"
                android:text="@string/results"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/journalTabItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/journalIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/grayShade1"/>

            <com.blueappsdev.engenhariamidiatia.utils.layout.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dinFamily="medium"
                android:textSize="13sp"
                android:text="@string/journals"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>